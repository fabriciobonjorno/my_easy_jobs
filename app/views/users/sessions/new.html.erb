<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 w-full" }) do |f| %>
  <div class="relative z-0 w-full mb-5 group">
    <%= f.email_field :email, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 outline-none focus:outline-none focus:ring-0 focus:border-blue-600 peer", placeholder: " ", autofocus: true, autocomplete: :false %>
    <%= f.label :email, class: "peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
  </div>
  <div class="relative z-0 w-full mb-2 group">
    <%= f.password_field :password, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 outline-none focus:outline-none focus:ring-0 focus:border-blue-600 peer", placeholder: " ", autocomplete: :false %>
    <%= f.label :password, class: "peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
  </div>
  <div class="w-full flex items-center justify-between mb-4">
    <div class="flex items-center">
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center h-5">
          <%= f.check_box :remember_me, class: "w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:focus:ring-primary-600 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600" %>
        </div>
        <div class="ml-3 text-sm">
          <%= f.label :remember_me, class: "font-medium text-gray-900 dark:text-white" %>
        </div>
      <% end %>
    </div>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Lost Password?", new_password_path(resource_name), class: "ml-auto text-sm text-primary-700 hover:underline dark:text-primary-500 text-blue-600 dark:text-blue-500" %>
    <% end %>
  </div>
  <%= f.submit "Log in", class: "w-full p-2 text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800" %>
<% end %>
<%= render 'layouts/shared/links' %>

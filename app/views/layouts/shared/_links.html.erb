<div class="text-sm font-medium text-gray-500 dark:text-gray-400">  
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= t('devise.shared.links.sign_up') %>
    <%= link_to "Click Here!", new_registration_path(resource_name), class: "text-primary-700 hover:underline dark:text-primary-500 text-blue-600 dark:text-blue-500" %>
  <% end %>
</div>
<div class="text-sm font-medium text-gray-500 dark:text-gray-400">
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= t('devise.shared.links.didn_t_receive_confirmation_instructions') %>
    <%= link_to "Send!", new_confirmation_path(resource_name), class: "text-primary-700 hover:underline dark:text-primary-500 text-blue-600 dark:text-blue-500" %>
  <% end %>
</div>
<div class="text-sm font-medium text-gray-500 dark:text-gray-400">
  <%- if controller_name != 'sessions' %>
    <%= t('devise.shared.links.sign_in') %>
    <%= link_to "here!", new_session_path(resource_name), class: "text-primary-700 hover:underline dark:text-primary-500 text-blue-600 dark:text-blue-500" %>
  <% end %>
</div>